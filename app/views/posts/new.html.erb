<h1>New Post</h1>

<%= form_for @post do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :link %>
	<%= f.text_field :link %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_area :content %>

	<br>
	<%= f.submit "Post!", class: "btn btn-primary" %>
<% end %>