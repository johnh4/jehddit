<h1><%= @post.link %></h1>
<p>author: <%= link_to @post.user.name, @post.user %></p>
<p>content: <%= @post.content %></p>
<p>vote_count: <%= @post.vote_count %></p>
<p>comment_count: <%= @post.comments.count %></p>

<%= link_to "Comment", new_post_comment_path(@post.id) %>

<div class="divide"></div>
<% if @comments.any? %>
	<ul class="comments">
		<%= render @comments.where(op_id: nil) %>
	</ul>
<% end %>