<%= provide(:title, "Reply") %>

<h1>Make a Reply</h1>
<%= form_for [@post, @op, @post.comments.build(op_id: @op.id)] do |f| %>
	<%#= render 'shared/error_messages', object: @comment %>
	<%= f.hidden_field :post_id %>

	<%= f.text_area :content, placeholder: "Compose your comment..." %>

	<br>
	<%= f.submit "Post", class: "btn btn-primary" %>

<% end %>