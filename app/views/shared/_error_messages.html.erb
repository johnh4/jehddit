<% if object.errors.any? %>
	<div class="error-explanation">
		<div class="alert alert-error">
			This form has <%= pluralize(object.errors.count, "error") %>.
		</div>
		<div>
			<ul>
				<% object.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>

